# Application
APP_NAME=circular-life-simulation
ENVIRONMENT=production

# Docker Registry
DOCKER_REGISTRY=your-registry
TAG=latest

# Domain Configuration
DOMAIN=aaryareddy.com
SSL_EMAIL=your@email.com

# Frontend URLs
VITE_URL=https://simulation.aaryareddy.com
VITE_WS_URL=wss://simulation.aaryareddy.com/ws/simulation

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=https://simulation.aaryareddy.com
DATABASE_URL=sqlite:///./data/simulation.db
DEBUG=false

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Scaling Configuration
FRONTEND_REPLICAS=3

# Production Specific
NODE_ENV=production
ENABLE_COMPRESSION=true
ENABLE_CACHING=true